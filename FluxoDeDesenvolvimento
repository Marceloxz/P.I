#include <stdio.h>

#define TOTAL_ETAPAS 6

int main() {
    int progresso[TOTAL_ETAPAS] = {0};
    char *etapas[TOTAL_ETAPAS] = {"Análise de Requisitos", "Design de UI/UX", "Codificação", "Testes", "Implementação", "Manutenção"};
    int todas_completas = 0;

    while (!todas_completas) {
        todas_completas = 1;
        for (int i = 0; i < TOTAL_ETAPAS; i++) {
            if (progresso[i] < 100) {
                printf("Progresso atual em %s: %d%%\n", etapas[i], progresso[i]);
                printf("Informe o progresso em %s (0-100): ", etapas[i]);
                scanf("%d", &progresso[i]);
                if (progresso[i] < 100) {
                    todas_completas = 0;
                }
            }
        }

        printf("\nEstado atual do projeto:\n");
        for (int i = 0; i < TOTAL_ETAPAS; i++) {
            printf("%s: %d%%\n", etapas[i], progresso[i]);
        }
        printf("\n------------------------\n");
    }

    printf("Todas as etapas foram completadas!\n");
    return 0;
}
